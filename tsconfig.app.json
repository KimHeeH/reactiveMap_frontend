{
  "compilerOptions": {
    "outDir": "./dist", // 출력 파일을 'dist' 디렉토리로 분리
    "rootDir": "./src", // 입력 파일의 루트 디렉토리 지정
    "composite": true, // 프로젝트 참조 활성화
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false, // emit 비활성화하면 안 됨
    "isolatedModules": true,
    "lib": ["dom", "esnext"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"] // 출력 디렉토리를 제외
}
